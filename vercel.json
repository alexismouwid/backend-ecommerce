{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"], // Agrega los métodos que necesites
      "headers": {
        "Access-Control-Allow-Origin": "https://e-commerce-two-topaz-93.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS", // Agrega los métodos que necesites
        "Access-Control-Allow-Headers": "Content-Type, Authorization", // Agrega los encabezados que necesites
        "Access-Control-Allow-Credentials": "true"
      }
    }
  ]
}
